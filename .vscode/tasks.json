{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake ..",
      "group": "none",
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake --build .",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
        {
      "label": "CMake Build ELF",
      "type": "shell",
      "command": "cmake --build . --target STM32_CPP.elf",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "CMake Build HEX",
      "type": "shell",
      "command": "cmake --build . --target STM32_CPP.hex",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Erase STM",
      "type": "process",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c port=SWD",
        "-e all"
      ],
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "group": "none",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Program STM",
      "type": "process",
      "dependsOn": [
        "CMake Build HEX",
        "Erase STM"
      ],
      "dependsOrder": "sequence",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-w",
        "/home/pi/VSARM/projects/STM32_CPP/build/STM32_CPP.hex"
      ],
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "group": "none",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Reset STM",
      "type": "process",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-rst"
      ],
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "group": "none",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Flash STM",
      "type": "process",
      "dependsOn": [
        "Program STM"
      ],
      "dependsOrder": "sequence",
      "command": "STM32_Programmer_CLI",
      "args": [
        "-c",
        "port=SWD",
        "-rst"
      ],
      "options": {
        "cwd": "/home/pi/VSARM/projects/STM32_CPP/build"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
